<% layout("/layout/boilerplate.ejs") %>

  <body>
    <h2 class="mt-3">List Details</h2>
    <p class="text-center">Created By: <b>
        <%= list.owner.username %>
      </b> </p>

    <div class="card mt-3 col-md-8 offset-md-2">
      <img src="<%= list.image %>" class="card-img-top" alt="..." style="height: 30rem;">
      <div class="card-body">
        <h5 class="card-title">
          <%= list.title %>
        </h5>
        <p class="card-text">
          <%= list.description %>
        </p>
        <p class="card-price">&#2547; <%= list.price.toLocaleString("en-BD") %> / per night</p>
        <div class="view-price">
          <p class="card-text">
            <%= list.location %>
          </p>
          <p>
            <%= list.country %>
          </p>
        </div>
      </div>

      <!-- only owner can show edit & delete button -->
      <% if (curUser && curUser._id.equals(list.owner._id)) { %>
        <% } %>
          <!-- only owner can show edit & delete button -->
          <div class="">
            <form style="display: inline-block;" action="/<%= list._id %>/edit" method="">
              <button class="btn btn-success">Edit</button>
            </form>
            <form style="display: inline-block; margin-left: 20px;" action="/<%= list._id %>/?_method=DELETE"
              method="post">
              <button class="btn btn-danger">Delete</button>
            </form>
          </div>

          <hr>
          <div class="show-review">
            <h3>All Reviews</h3>
            <div class="row ">
              <% for( review of list.reviews ) { %>
                <div class="card border col-5 ms-3 mb-3">
                  <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                      <h4>
                      <%= review.author.username %>
                    </h4>
                    <p><%= new Date(review.createAt).toLocaleDateString('en-GB') %></p>
                    </div>
                    <p class="starability-result" data-rating="<%= review.rating %>">  </p>
                    <p class="card-text">
                      <%= review.comment %>
                    </p>
                    <form action="/<%= list._id %>/reviews/<%= review._id %>?_method=DELETE" method="post">
                      <button class="btn btn-danger">delete</button>
                    </form>
                  </div>
                </div>
                <% } %>
            </div>
          </div>
          <div>
            <% if (curUser) { %>
              <hr>
              <h3>Share You Expreience</h3>
              <form class="needs-validation" novalidate action="/<%= list._id %>/reviews" method="post">
                <div>
                  <fieldset class="starability-slot">
                    <legend>First rating:</legend>
                    <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="0" checked
                      aria-label="No rating." />
                    <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                    <label for="first-rate1" title="Terrible">1 star</label>
                    <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                    <label for="first-rate2" title="Not good">2 stars</label>
                    <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                    <label for="first-rate3" title="Average">3 stars</label>
                    <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                    <label for="first-rate4" title="Very good">4 stars</label>
                    <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                    <label for="first-rate5" title="Amazing">5 stars</label>
                  </fieldset>
                </div>
                <div>
                  <label class="form-label" for="comment">Comment</label>
                  <textarea class="form-control" name="review[comment]" id="comment" required></textarea>
                  <div class="invalid-feedback">Please Submit comment for review</div>
                </div>
                <button class="btn btn-outline-dark mt-3">Submit</button>
              </form>
              <% } %>
          </div>


          <a href="/">Back to List</a>
    </div>





