<% layout("/layout/boilerplate.ejs") %>

<body>
    <div class="row">
        <h2>Edit Listing</h2>

        <form class="col-lg-6 offset-lg-3" action="/<%= list._id %>?_method=PUT" method="post">
                <label for="title" class="from-label"> title</label><br>
                <input type="text" name="listing[title]" class="form-control" value="<%= list.title %>"> <br><br>
                <label for="image" class="from-label"> Image Link</label><br>
                <input type="text" name="listing[image]" value="<%= list.image %>" class="form-control"> <br><br>
                <label for="description" class="from-label"> description</label><br>
                <textarea name="listing[description]" id="" 
                    class="form-control"> <%= list.description %> </textarea><br><br>
                <label for="price" class="from-label"> price</label><br>
                <input type="number" name="listing[price]" value="<%= list.price %>" class="form-control"><br><br>
                <div class="row">
                    <div class="col-md-6 ">
                        <label for="location" class="from-label"> location</label><br>
                        <input type="text" name="listing[location]" value="<%= list.location %>"
                            class="form-control">
                    </div>
                    <div class="col-md-6">
                        <label for="country" class="from-label"> country</label><br>
                        <input type="text" name="listing[country]" value="<%= list.country %>"
                            class="form-control">
                    </div>
                </div>
                <br><br>
                <button class="btn btn-success">Update</button>
        </form>
    </div>

</body>